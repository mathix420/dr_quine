################################################################################
#####                              FILES VARS                              #####
################################################################################

QUINE = quine

DIR_0 = .
_0 = quine.c 
QUINE_SRC = $(patsubst %,$(DIR_0)/%,$(_0))

QUINE_OBJ = $(QUINE_SRC:.c=.o)

################################################################################
#####                           COMPILER OPTIONS                           #####
################################################################################

CC = gcc
FLAGS = -Wall -Wextra -Werror

################################################################################
#####                            MAKEFILE RULES                            #####
################################################################################

.PHONY : all clean fclean re

all : $(QUINE)

$(QUINE_OBJ) : %.o : %.c
	@$(CC) $(FLAGS) -c $< -o $@ -I.

$(QUINE) : $(QUINE_OBJ) 
	@$(CC) $(FLAGS) $(QUINE_OBJ) -o $@ -I. 

clean :
	@/bin/rm -f $(QUINE_OBJ)

fclean : clean
	@/bin/rm -f $(QUINE)

re : fclean all
